<!-- app/views/creatures/new.html.erb -->

<div class="container">

  <h1>Create a New Creature</h1>
  <hr>

  <%= form_for @creature do |f| %>
    <%= f.text_field :name, required: true %><br><br>
    <%= f.text_area :description, required: true %><br>
    <%= f.submit "Save Creature" %>
  <% end %>


  <hr>
  <%= link_to "Back", creatures_path %>

</div>
