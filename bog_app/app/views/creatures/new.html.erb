<h2>Add a New Creature</h2>
<%= form_for @creature, html: { multipart: true } do |f| %>
    <div>
      <%= f.label :image %>
      <%= f.file_field :image %>
    </div>
    <div>
      <%= f.label :name %>
      <%= f.text_field :name %>
    </div>
    <div>
      <%= f.label :description %>
      <%= f.text_area :description %>
    </div>
    <div>
      <%= f.submit "Save Creature" %>
    </div>
  <% end %>
