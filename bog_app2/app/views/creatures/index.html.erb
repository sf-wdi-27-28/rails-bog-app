<br>
<div class="container">
  <div class="row">
    <div class="well col-sm-6 col-sm-offset-3">
      <h2>Bog Creatures!</h2>
      <% @creatures.each do |creature| %>
        <p>
          <strong>Name:</strong> <%= link_to "#{creature.name}", creature_path(creature) %><br>
          <strong>Description:</strong> <%= creature.description %>
        </p>
      <% end %>
      <%= link_to "Add a New Creature", new_creature_path %>
    </div>
  </div>
</div>
